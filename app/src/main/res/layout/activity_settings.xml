<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.example.macbookair.tap_that.settings">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/androidscreen3"
        android:scaleType="fitXY"

        />
    <CheckBox
        android:layout_width="wrap_content"
android:onClick="toggleMusic"
        android:layout_height="wrap_content"
        android:text="Music"
        android:id="@+id/musicBox"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dip"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:padding="5px"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap That"
        android:onClick="sendTOGame"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:onClick="goToMainScreen"
        android:id="@+id/button7"
        android:layout_alignTop="@+id/button6"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
